# SDR Job Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Apify API Token (get from https://console.apify.com/account/integrations)
APIFY_TOKEN=your_apify_token_here

# Telegram Bot Configuration (get from @BotFather on Telegram)
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Supabase Configuration (get from https://supabase.com/dashboard/project/_/settings/api)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Optional: Override default config path
# CONFIG_PATH=config.yaml
